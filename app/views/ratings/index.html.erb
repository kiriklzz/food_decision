<h1>My ratings</h1>

<h2>Average by theme</h2>
<ul>
  <% @avg_by_theme.each do |theme, avg| %>
    <li><strong><%= theme %></strong>: <%= avg.round(2) %></li>
  <% end %>
</ul>

<hr>

<h2>All my ratings</h2>
<table border="1" cellpadding="6" cellspacing="0">
  <thead>
    <tr>
      <th>Dish</th>
      <th>Theme</th>
      <th>Score</th>
      <th>Created</th>
    </tr>
  </thead>
  <tbody>
    <% @ratings.each do |r| %>
      <tr>
        <td><%= r.dish.title %></td>
        <td><%= r.dish.theme %></td>
        <td><%= r.score %></td>
        <td><%= r.created_at.strftime("%Y-%m-%d %H:%M") %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= render "devise/shared/auth_card" do %>
  <h1 class="auth-title"><%= t("devise.passwords.new.forgot_your_password", default: "Forgot your password?") %></h1>

  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="auth-field">
      <%= f.label :email, class: "auth-label" %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "auth-input" %>
    </div>

    <%= f.submit t("devise.passwords.new.send_me_reset_password_instructions",
                   default: "Send reset instructions"),
                 class: "btn primary auth-submit" %>
  <% end %>

  <div class="auth-links">
    <%= render "devise/shared/links" %>
  </div>
<% end %>

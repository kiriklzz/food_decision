<div class="auth-links-row">
  <% if controller_name != "sessions" %>
    <%= link_to t("devise.shared.links.sign_in", default: "Sign in"), new_session_path(resource_name), class: "auth-link" %>
  <% end %>

  <% if devise_mapping.registerable? && controller_name != "registrations" %>
    <%= link_to t("devise.shared.links.sign_up", default: "Sign up"), new_registration_path(resource_name), class: "auth-link" %>
  <% end %>

  <% if devise_mapping.recoverable? && controller_name != "passwords" %>
    <%= link_to t("devise.shared.links.forgot_your_password", default: "Forgot your password?"), new_password_path(resource_name), class: "auth-link" %>
  <% end %>
</div>

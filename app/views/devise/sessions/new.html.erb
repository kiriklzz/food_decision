<%= render "devise/shared/auth_card" do %>
  <h1 class="auth-title"><%= t("devise.sessions.new.sign_in", default: "Sign in") %></h1>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="auth-field">
      <%= f.label :email, class: "auth-label" %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "auth-input" %>
    </div>

    <div class="auth-field">
      <%= f.label :password, class: "auth-label" %>
      <%= f.password_field :password, autocomplete: "current-password", class: "auth-input" %>
    </div>

    <% if devise_mapping.rememberable? %>
      <label class="auth-check">
        <%= f.check_box :remember_me, class: "auth-check-input" %>
        <span class="auth-check-text"><%= t("ui.remember_me", default: "Remember me") %></span>
      </label>
    <% end %>


    <%= f.submit t("devise.sessions.new.sign_in", default: "Sign in"), class: "btn primary auth-submit" %>
  <% end %>

  <div class="auth-links">
    <%= render "devise/shared/links" %>
  </div>
<% end %>
